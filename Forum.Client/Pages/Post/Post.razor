@code {
    [Parameter]
    public string Id { get; set; }

    PostResponse post;
    ComentRequest coment = new ComentRequest();

    protected async override Task OnInitializedAsync()
    {
        await loadPost();
    }

    async Task loadPost()
    {
        var response = await Http.GetAsync(await Storage.GetItemAsStringAsync("back_uri") + ApiRoutes.Posts.Get.Replace("{id}", Id));
        if (response.IsSuccessStatusCode)
        {
            var resp = await response.Content.ReadFromJsonAsync<Response<PostResponse>>();
            post = resp.Data;
        }
    }
    async Task CreateNewComent()
    {
        coment.PostId = Id;
        var response = await Http.PostAsJsonAsync(await Storage.GetItemAsStringAsync("back_uri") + ApiRoutes.Coments.Create, coment);
        await CheckIfOk(response);
    }
    async Task CreateComentHandler(ComentRequest comentreq)
    {
        comentreq.PostId = Id;
        var response = await Http.PostAsJsonAsync(await Storage.GetItemAsStringAsync("back_uri") + ApiRoutes.Coments.Create, comentreq);
        await CheckIfOk(response);
    }
    async Task CheckIfOk(HttpResponseMessage response)
    {
        if (response.IsSuccessStatusCode)
        {
            Toaster.Success("You succesfuly comented this post!");
            await loadPost();
        }
        else if (response.StatusCode == System.Net.HttpStatusCode.Unauthorized)
        {
            Toaster.Warning("You have to login to leave a coment");
        }
        else
        {
            Toaster.Error("Something went wrong while commenting this post");
        }

    }
    async Task Vote()
    {
        var responce = await Http.PostAsync(await Storage.GetItemAsStringAsync("back_uri") + ApiRoutes.Posts.Vote.Replace("{id}", Id), null);

        if (responce.IsSuccessStatusCode)
        {
            Toaster.Success(await responce.Content.ReadAsStringAsync());
            post.Rating += 1;
        }
        else if(responce.StatusCode == System.Net.HttpStatusCode.Unauthorized)
        {
            Toaster.Warning("You have to login to vote");
        }
        else if(responce.StatusCode == System.Net.HttpStatusCode.BadRequest)
        {
            Toaster.Error(await responce.Content.ReadAsStringAsync());
        }
    }

}
