<ul class="pagination pagination-md">
    @foreach (var i in Enumerable.Range(1, PageCount))
    {
        @if (i == Page)
        {
            <li class="page-item disabled"><a class="page-link">@i</a></li>
        }
        else
        {
            <li class="page-item"><a class="page-link" @onclick="@( async () => await OnPagerPageChanged.InvokeAsync(i))">@i</a></li>
        }
    }

</ul>

@code {
    [Parameter]
    public int PageCount { get; set; }
    [Parameter]
    public int Page { get; set; }
    [Parameter]
    public EventCallback<int> OnPagerPageChanged { get; set; }

}
