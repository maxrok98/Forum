<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">Forum.Client</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="subscribtions" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="userpage">
                <span class="oi oi-account-login" aria-hidden="true"></span> My page
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="threadpage">
                <span class="oi oi-list" aria-hidden="true"></span> Threads
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="createpost">
                <span class="oi oi-document" aria-hidden="true"></span> Create post
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="posts">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Posts
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="userlist">
                <span class="oi oi-list-rich" aria-hidden="true"></span> User List
            </NavLink>
        </li>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
